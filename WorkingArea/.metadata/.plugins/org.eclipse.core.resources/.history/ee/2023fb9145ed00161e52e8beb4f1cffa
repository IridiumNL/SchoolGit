public class DLinkedTest {
	private DNode head;
	private DNode tail;
	int size;
	
	public DLinkedTest() {
		head = null;
		tail = null;
		size = 0;
	}
	
	public boolean isEmpty() {
		if(size == 0) {
			return true;
		} else {
			return false;
		}
	}
	
	public void insert(int data) {
		DNode n = new DNode(data);
		if (isEmpty()) {
			head = n;
			tail = n;
			size++;
		} else if(size == 1) {
			head.prev = n;
			n.next = head;
			tail = n;
			size++;
		} else {
			DNode temp = new DNode(tail.getData());
			temp.next = n;
			temp.prev = tail.prev;
			tail = n;
			tail.prev = temp;
			size++;
		}
	}
	
	public String toString() {
		StringBuffer sb = new StringBuffer();
		sb.append("[");
		DNode temp = head;
		while(temp != null) {
			if(temp.getPrev() == null) {
				sb.append(temp.getData());
			} else {
				sb.append(temp.getData() + ", ");
			}
			temp = temp.getPrev();
		}
		sb.append("]");
		String s = sb.toString();
		return s;
	}
	
	public static void main(String[] args) {
		DLinkedTest d = new DLinkedTest();
		d.insert(1);
		System.out.println(d);
		d.insert(2);
		System.out.println(d);
		d.insert(3);
		System.out.println(d);
		d.insert(4);
		System.out.println(d);
	}
}
